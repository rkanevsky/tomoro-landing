<style>
    .btn {
        @apply bg-transparent text-light border border-light px-8 py-4 font-mono text-sm uppercase font-normal transition-all duration-300 relative overflow-hidden;
        --accent: #00FF81;
    }

    .btn::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 0%;
        bottom: 0;
        left: 0;
        background-color: var(--accent);
        transition: height 0.3s;
        z-index: -1;
    }

    .btn:hover {
        @apply border-accent text-accent;
    }

    .btn:hover::after {
        height: 100%;
    }

    .btn-dark {
        @apply bg-transparent text-dark border border-dark px-8 py-4 font-mono text-sm uppercase font-normal transition-all duration-300 relative overflow-hidden;
        --accent: #00FF81;
    }

    .btn-dark::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 0%;
        bottom: 0;
        left: 0;
        background-color: var(--accent);
        transition: height 0.3s;
        z-index: -1;
    }

    .btn-dark:hover {
        @apply border-accent text-accent;
    }

    .btn-dark:hover::after {
        height: 100%;
    }
</style>
