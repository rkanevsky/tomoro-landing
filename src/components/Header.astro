<header
    class="flex justify-center items-center px-8 py-6 border-b border-grid gap-8 fixed top-0 left-0 right-0 z-40 backdrop-blur-sm"
    style="background-color: rgba(10, 10, 10, 0.8);"
>
    <span class="font-mono font-bold text-xl text-white absolute left-8"
        >TOMORO</span
    >
    <div
        id="clock"
        class="font-mono text-xs border border-gray-600 px-2.5 py-1 rounded-full absolute right-8"
    >
        00:00:00 LOCAL
    </div>
</header>

<script>
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString("en-US", {
            hour12: false,
            hour: "2-digit",
            minute: "2-digit",
            second: "2-digit",
        });
        const clock = document.getElementById("clock");
        if (clock) {
            clock.innerText = timeString + " LOCAL";
        }
    }

    setInterval(updateTime, 1000);
    updateTime();
</script>
