<style>
    @keyframes rotate-sphere {
        0% {
            transform: rotate3d(1, 1, 1, 0deg);
        }
        100% {
            transform: rotate3d(1, 1, 1, 360deg);
        }
    }

    .animate-rotate-sphere {
        animation: rotate-sphere 10s linear infinite;
    }
</style>

<script>
    const container = document.getElementById('animation-container');
    const animationCenter = document.getElementById('animation-center');

    if (container && animationCenter) {
        document.addEventListener('mousemove', (e) => {
            const containerRect = container.getBoundingClientRect();
            const containerCenterX = containerRect.left + containerRect.width / 2;
            const containerCenterY = containerRect.top + containerRect.height / 2;

            const mouseX = e.clientX - containerCenterX;
            const mouseY = e.clientY - containerCenterY;

            // Calculate distance from center
            const distance = Math.sqrt(mouseX * mouseX + mouseY * mouseY);
            const maxDistance = 500;
            const influence = Math.max(0, 1 - distance / maxDistance);

            // Apply very strong 3D tilt to animation with smooth easing
            const tiltX = (mouseY / containerRect.height) * 60 * influence;
            const tiltY = (mouseX / containerRect.width) * 60 * influence;

            animationCenter.style.transform = `perspective(800px) rotateX(${tiltX}deg) rotateY(${tiltY}deg)`;
            animationCenter.style.transition = 'transform 0.1s ease-out';
        });

        // Reset on mouse leave
        document.addEventListener('mouseleave', () => {
            animationCenter.style.transform = 'perspective(800px) rotateX(0deg) rotateY(0deg)';
        });
    }

    // Handle hero waitlist button click
    const heroBtn = document.getElementById('hero-waitlist-btn');
    if (heroBtn) {
        heroBtn.addEventListener('click', (e) => {
            e.preventDefault();
            const form = document.getElementById('waitlist-form');
            if (form) {
                form.scrollIntoView({ behavior: 'smooth', block: 'start' });
                setTimeout(() => {
                    const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
                    emailInput?.focus();
                }, 800);
            }
        });
    }
</script>
