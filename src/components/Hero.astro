---
/* Astro frontmatter – если вам тут ничего не нужно, можно оставить пустым */
---

<style>
    /* Fade-up animation (Premium Apple / Linear style) */
    @keyframes fade-up-soft {
        0% {
            opacity: 0;
            transform: translateY(24px);
        }
        60% {
            opacity: 1;
            transform: translateY(6px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-up {
        opacity: 0;
        animation: fade-up-soft 0.8s ease-out forwards;
    }

    .fade-up-delay-1 {
        opacity: 0;
        animation: fade-up-soft 0.9s ease-out forwards;
        animation-delay: 0.12s;
    }

    .fade-up-delay-2 {
        opacity: 0;
        animation: fade-up-soft 1s ease-out forwards;
        animation-delay: 0.24s;
    }
</style>

<section class="bg-dark border-b border-grid">
    <div
        class="max-w-5xl mx-auto px-8 lg:px-16 py-24 lg:py-32 flex flex-col items-center gap-20"
    >
        <!-- Heading block -->
        <div class="flex flex-col items-center text-center gap-6">
            <!-- Subheading -->
            <p
                class="font-mono text-[11px] tracking-widest uppercase text-gray-500 fade-up"
            >
                Early Access
            </p>

            <!-- Main heading -->
            <h1
                class="uppercase font-semibold text-[42px] sm:text-[52px] lg:text-[64px] leading-[1.05] fade-up-delay-1"
            >
                A desktop tool
                <br />
                for solo professionals<span class="text-accent">.</span>
            </h1>

            <!-- Supporting text -->
            <p
                class="text-base sm:text-lg text-gray-400 max-w-xl leading-relaxed fade-up-delay-2"
            >
                A minimal, private, distraction-free space to manage your
                projects, clients, and earnings — with full control over your
                work and your attention.
            </p>
        </div>

        <!-- CTA block -->
        <div class="flex flex-col items-center gap-4 fade-up-delay-2">
            <button
                id="hero-waitlist-btn"
                class="font-mono font-bold text-sm px-7 py-3 border border-light text-light rounded hover:bg-light hover:text-dark transition-all duration-200 bg-transparent cursor-pointer"
                style="box-shadow: 0 0 20px rgba(255,255,255,0.25), 0 0 40px rgba(255,255,255,0.12);"
            >
                Join the waitlist
            </button>

            <p class="font-mono text-xs text-gray-500">
                No spam. Early access only.
            </p>
        </div>
    </div>
</section>

<script>
    // --- Smooth scroll to waitlist form (fixed version) ---
    const heroBtn = document.getElementById("hero-waitlist-btn");

    if (heroBtn) {
        heroBtn.addEventListener("click", (e) => {
            e.preventDefault();

            const form = document.getElementById("waitlist-form");
            if (form) {
                form.scrollIntoView({ behavior: "smooth", block: "start" });

                setTimeout(() => {
                    const emailInput = form.querySelector(
                        'input[type="email"]',
                    );
                    if (emailInput) emailInput.focus();
                }, 800);
            }
        });
    }
</script>
